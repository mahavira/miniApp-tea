@import "/wxParse/wxParse.wxss";

.post {
  margin-top: 10px;
  position: relative;
}
.post .image {
  width: 100%;
  height: 180px;
  display: block
}

.post .title{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: rgba(0,0,0,0.5);
  color: #FFF;
  font-size: 14px;
  padding: 5px;
  box-sizing: border-box;
}
.products {
  display: flex;
  margin: 20px 15px 0;
  font-size: 14px;
  flex-wrap: wrap;
  text-align: center;

}

.product {
  flex: 0 0 50%;
  overflow: hidden;
  padding-top: 20px;
  margin-bottom: 20px;
}

.product .image {
  width: 130px;
  height: 130px;
  display: block;
  margin: 0 auto;
}

.product .title {
  text-align: left;
  padding: 0 10px;
  margin-top: 15px;
  margin-bottom: 0px;
  overflow: hidden;
  word-wrap: break-word;
  height: 20px;
}

.product .money {
  text-align: left;
  padding: 0 10px;
}

.product .money .discount {
  color: #f00;
  margin-right: 10px;
}

.product .money .price {
  color: #aaa;
  text-decoration: line-through;
}

.product-single{
  display: flex;
  padding: 5px 0;
}
.product-single .media-left{
  background: #000;
  width: 100px;
  height: 100px;
  margin-right: 10px;
}
.product-single .media-body{
  flex: 1;
  display: table-cell;
  vertical-align: top;
}

.product-single .discount {
  color: #f00;
  margin-right: 10px;
}

.product-single .title{
  font-size: 16px;
  color: #555;
}
.product-single .price {
  color: #aaa;
  font-size: 14px;
  text-decoration: line-through;
}
.product-single .description{
  font-size: 12px;
  color: #aaa;
}