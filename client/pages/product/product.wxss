.filter-wrp{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  box-sizing: border-box;
  padding:2px 15px 5px;
}
.filter {
  display: flex;
  height: 21px;
  color: #888;
  box-shadow: 0 0 2px #aaa;
  padding: 10px;
  font-size: 14px;
  background: #FFF;
}

.filter .input {
  font-size: 14px;
  flex: 1;
  height: 25px;
  line-height: 25px;
  box-sizing: border-box;
  color: #aaa;
}

.filter-icon {
  width: 155px;
  display: flex;
}

.btn {
  width: 60px;
  height: 25px;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  margin-left: 10px;
}

.btn image {
  width: 17px;
  height: 17px;
  margin-left: 5px;
}

.btn.btn-search image {
  width: 20px;
  height: 20px;
}

.btn.btn-search {
  width: 25px;
  position: relative;
}

.products {
  display: flex;
  margin: 60px 15px 0;
  font-size: 14px;
  flex-wrap: wrap;
  text-align: center;

}

.product {
  flex: 0 0 50%;
  overflow: hidden;
  margin-bottom: 20px;
}

.product image {
  width: 130px;
  height: 130px;
  display: block;
  margin: 0 auto;
}

.product .title {
  text-align: left;
  padding: 0 10px;
  margin-top: 15px;
  margin-bottom: 10px;
  overflow: hidden;
  word-wrap: break-word;
  height: 20px;
}

.product .money {
  text-align: left;
  padding: 0 10px;
}

.product .money .discount {
  color: #f00;
  margin-right: 10px;
}

.product .money .price {
  color: #aaa;
  text-decoration: line-through;
}

.more {
  font-size: 14px;
  padding: 20px;
  color: #999;
  text-align: center;
}

.filter-panel {
  background: rgba(250, 250, 250, 0.8);
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  visibility: hidden;
  opacity: 0;
  transition: all 0.4s;
}

.filter-container {
  width: 80%;
  height: 100%;
  position: absolute;
  right: 0;
  top: 0;
  background: #fff;
  box-shadow: -1px 1px 5px rgba(0, 0, 0, 0.5);
  transform: translateX(100%);
  transition: all 0.4s;
  padding-bottom: 30px;
  box-sizing: border-box;
}
.mask{
  width: 100%;
  height: 100%;
  position: absolute;
  right: 0;
  top: 0;
}

.open.filter-panel {
  visibility: visible;
  opacity: 1;
}

.open .filter-container {
  transform: translateX(0%);
}

.term {
  margin: 10px 15px 20px;
}

.term-hd {
  font-size: 18px;
  color: #333;
  margin-bottom: 15px;
}

.term-opts {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.term-opt {
  font-size: 14px;
  color: #555;
  background: #eee;
  flex: 0 0 45%;
  box-sizing: border-box;
  line-height: 1;
  padding: 10px;
  margin-bottom: 10px;
  transition: all 0.4s;
}

.term-opt.active {
  background: #999;
  color: #fff;
}

.term-btns {
  position: fixed;
  bottom: 0;
  right: 0;
  width: 80%;
  display: flex;
  border-top: 1px solid #eee;
}

.term-btn {
  flex: 1;
  background: RGBA(228, 27, 29, 1.00);
  color: #fff;
  font-size: 18px;
  line-height: 1;
  box-sizing: border-box;
  padding: 12px 20px;
  text-align: center;
}

.term-btn.close {
  background: #fff;
  color: #000;
}
