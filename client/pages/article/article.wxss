/**index.wxss**/
.filter{
  display: flex;
  height: 40px;
  margin: 0 15px 15px;
  box-sizing: border-box;
  border-bottom: 1px solid #EEE;
  padding: 10px 0 10px 10px;
}
.filter .input{
  font-size: 14px;
  flex: 1;
  height: 25px;
  line-height: 25px;
  box-sizing: border-box;
  color: #AAA;
}
.filter-icon{
  width: 25px;
  height: 25px;
  display: flex;
}
.btn{
  width: 25px;
  height: 25px;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.btn image{
  width: 20px;
  height: 20px;
}

.container{
  margin:15px;
}
.box {
  margin-top: 10px;
  position: relative;
}
.box .image {
  width: 100%;
  height: 180px;
  display: block
}

.box .title{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: rgba(0,0,0,0.5);
  color: #FFF;
  font-size: 14px;
  padding: 5px;
  box-sizing: border-box;
}